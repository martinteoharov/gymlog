{
  "name": "@gymlog/mobile",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "scripts": {
    "dev": "vite dev",
    "build": "vite build",
    "preview": "vite preview",
    "prepare": "svelte-kit sync || echo ''",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "cap:init": "cap init GymLog com.gymlog.app --web-dir build",
    "cap:add:ios": "cap add ios",
    "cap:add:android": "cap add android",
    "cap:sync": "mise exec -- cap sync",
    "cap:open:ios": "mise exec -- cap open ios",
    "cap:open:android": "mise exec -- cap open android",
    "mobile:ios": "bun run build && mise exec -- cap sync ios && mise exec -- cap open ios",
    "mobile:android": "bun run build && mise exec -- cap sync android && mise exec -- cap open android",
    "rebuild-and-sync": "bun run build && mise exec -- cap sync"
  },
  "devDependencies": {
    "@capacitor/android": "^8.0.0",
    "@capacitor/cli": "^8.0.0",
    "@capacitor/core": "^8.0.0",
    "@capacitor/ios": "^8.0.0",
    "@sveltejs/kit": "^1.30.4",
    "@sveltejs/vite-plugin-svelte": "^2.5.3",
    "svelte": "^4.2.20",
    "svelte-check": "^3.8.6",
    "typescript": "^5.0.0",
    "vite": "^4.5.5"
  },
  "dependencies": {
    "@sveltejs/adapter-static": "^2.0.3",
    "chart.js": "^4.5.1",
    "dexie": "^4.0.8"
  }
}
